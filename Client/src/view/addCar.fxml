<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<Pane prefHeight="200.0" prefWidth="299.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ProfileController">
   <children>
      <VBox alignment="CENTER" prefHeight="195.0" prefWidth="299.0">
         <children>
            <HBox prefHeight="116.0" prefWidth="246.0">
               <children>
                  <VBox prefHeight="116.0" prefWidth="174.0">
                     <children>
                        <Label prefHeight="18.0" prefWidth="250.0" text="Бренд">
                           <VBox.margin>
                              <Insets left="10.0" />
                           </VBox.margin>
                        </Label>
                        <Label prefHeight="18.0" prefWidth="322.0" text="Модель">
                           <VBox.margin>
                              <Insets left="10.0" top="12.0" />
                           </VBox.margin>
                        </Label>
                        <Label prefHeight="18.0" prefWidth="300.0" text="Номер ВИН">
                           <VBox.margin>
                              <Insets left="10.0" top="12.0" />
                           </VBox.margin>
                        </Label>
                        <Label prefHeight="18.0" prefWidth="227.0" text="Регистрационный номер">
                           <VBox.margin>
                              <Insets left="10.0" top="12.0" />
                           </VBox.margin>
                        </Label>
                     </children>
                  </VBox>
                  <VBox prefHeight="116.0" prefWidth="111.0">
                     <children>
                        <TextField fx:id="brand" />
                        <TextField fx:id="model">
                           <VBox.margin>
                              <Insets top="3.0" />
                           </VBox.margin>
                        </TextField>
                        <TextField fx:id="vin">
                           <VBox.margin>
                              <Insets top="3.0" />
                           </VBox.margin>
                        </TextField>
                        <TextField fx:id="number">
                           <VBox.margin>
                              <Insets top="3.0" />
                           </VBox.margin>
                        </TextField>
                     </children>
                  </VBox>
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="40.0" prefWidth="286.0">
               <children>
                  <Button contentDisplay="CENTER" mnemonicParsing="false" onAction="#addCar" text="Сохранить" />
                  <Button mnemonicParsing="false" text="Отменить" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</Pane>
