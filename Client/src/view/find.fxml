<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>


<AnchorPane prefHeight="400.0" prefWidth="690.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.FindController">
   <children>
      <BorderPane layoutY="2.0" prefHeight="400.0" prefWidth="690.0">
         <left>
            <ListView fx:id="carServiceList" prefHeight="364.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
         </left>
         <center>
            <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
               <children>
                  <Label fx:id="nameLabel" text="Label">
                     <VBox.margin>
                        <Insets left="20.0" top="20.0" />
                     </VBox.margin>
                  </Label>
                  <Label fx:id="descriptionLabel" text="Label">
                     <VBox.margin>
                        <Insets left="20.0" top="35.0" />
                     </VBox.margin>
                  </Label>
                  <Label fx:id="brandLabel" text="Label">
                     <VBox.margin>
                        <Insets left="20.0" top="100.0" />
                     </VBox.margin>
                  </Label>
                  <Label fx:id="serviceLabel" text="Label">
                     <VBox.margin>
                        <Insets left="20.0" top="50.0" />
                     </VBox.margin>
                  </Label>
               </children>
            </VBox>
         </center>
         <top>
            <Pane prefHeight="38.0" prefWidth="690.0" BorderPane.alignment="CENTER">
               <children>
                  <HBox alignment="CENTER" prefHeight="42.0" prefWidth="690.0">
                     <children>
                        <ComboBox fx:id="carComboBox" prefWidth="150.0" />
                        <ComboBox fx:id="serviceComboBox" prefWidth="150.0" />
                        <Button mnemonicParsing="false" onAction="#onFindButtonPressed" prefHeight="26.0" prefWidth="102.0" text="Найти" />
                     </children>
                  </HBox>
               </children>
            </Pane>
         </top>
      </BorderPane>
   </children>
</AnchorPane>
